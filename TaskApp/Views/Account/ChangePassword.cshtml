@model TaskApp.Models.Employee

@{
    ViewBag.Title = "ChangePassword";
}

<h2>Change your password</h2>

@using (Html.BeginForm("ChangePassword", "Employees"))
{
    <div class="form-group">
        @Html.LabelFor(e => e.Username, "Your Email")
        @Html.TextBoxFor(e => e.Username, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Username)
    </div><br />
    <div class="form-group">
        @Html.LabelFor(e => e.Password, "Your Email")
        @Html.TextBoxFor(e => e.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Password)
    </div><br />
    <div class="form-group">
        @Html.LabelFor(e => e.Password)
        @Html.TextBoxFor(e => e.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Password)
    </div><br />

    <button type="submit" class="btn btn-primary">Save</button>
}

