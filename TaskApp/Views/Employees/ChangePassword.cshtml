@model TaskApp.Models.Employee

@{
    ViewBag.Title = "ChangePassword";
}

@{
    var newPassword = TempData["newPass"];
}

<h2>Change your password</h2>

@using (Html.BeginForm("Change", "Employees"))
{
    <div class="form-group">
        @Html.LabelFor(e => e.Username, "Email")
        @Html.TextBoxFor(e => e.Username, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Username)
    </div><br />
    <div class="form-group">
        @Html.LabelFor(e => e.Password, "New password")
        @Html.TextBoxFor(e => e.Password, new { @class = "form-control", @type = "password" })
        @Html.ValidationMessageFor(e => e.Password)
    </div><br />
    @*<div class="form-group">
            @Html.Label("New password")
            <br />
            @Html.TextBoxFor(, new { @class = "form-control"})
        </div><br />*@

    <button type="submit" class="btn btn-primary">Save</button>
}

