@model TaskApp.Models.Employee
@{
    ViewBag.Title = "EditEmployee";
}

<h2>Edit Employee</h2><br />

@using (Html.BeginForm("EditEmployee", "Employees"))
{
    @Html.HiddenFor(e => e.Id)
    <div class="form-group">
        @Html.LabelFor(e => e.FirstName)
        @Html.TextBoxFor(e => e.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.FirstName)
    </div><br />
    <div class="form-group">
        @Html.LabelFor(e => e.LastName)
        @Html.TextBoxFor(e => e.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.LastName)
    </div><br />
    <div class="form-group">
        @Html.LabelFor(e => e.Username)
        @Html.TextBoxFor(e => e.Username, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Username)
    </div><br />
    <div class="form-group">
        @Html.LabelFor(e => e.Password)
        @Html.TextBoxFor(e => e.Password, new { @class = "form-control", @type = "password"})
        @Html.ValidationMessageFor(e => e.Password)
    </div><br />
    <div class="form-group">
        @Html.LabelFor(e => e.UserType)
        @Html.DropDownListFor(e => e.UserType, new SelectList(
            new List<string> { "Admin", "User" }
            ), "Select User Type", new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.UserType)
    </div><br />
    <button type="submit" class="btn btn-primary">Save</button>

}

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")

    <script>

    </script>
}